<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.tudarmstadt.informatik.secuso.phishedu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.tudarmstadt.informatik.secuso.phishedu.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.tudarmstadt.informatik.secuso.phishedu.ResultActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="phishedu"/>
            </intent-filter>
        </activity>
        <activity
            android:name="de.tudarmstadt.informatik.secuso.phishedu.BackendTestActivity"
            android:label="@string/title_activity_backend_test">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.tudarmstadt.informatik.secuso.phishedu.DisplayYouDontBelieveUsActivity"
            android:label="@string/title_activity_display_you_dont_believe_us" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tudarmstadt.informatik.secuso.phishedu.MainActivity" />
        </activity>
        <activity
            android:name="de.tudarmstadt.informatik.secuso.phishedu.SendEmailActivity"
            android:label="@string/title_activity_send_email" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tudarmstadt.informatik.secuso.phishedu.DisplayYouDontBelieveUsActivity" />
        </activity>
        <activity
            android:name="de.tudarmstadt.informatik.secuso.phishedu.AlertDialogActivity"
            android:label="@string/title_activity_alert_dialog" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tudarmstadt.informatik.secuso.phishedu.SendEmailActivity" />
        </activity>
        <activity
            android:name="de.tudarmstadt.informatik.secuso.phishedu.FinalAwarenessActivity"
            android:label="@string/title_activity_final_awareness" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tudarmstadt.informatik.secuso.phishedu.AlertDialogActivity" />
        </activity>
        <activity
            android:name="de.tudarmstadt.informatik.secuso.phishedu.ResendEmailOptionActivity"
            android:label="@string/title_activity_resend_email_option" >
        </activity>
        <activity
            android:name="de.tudarmstadt.informatik.secuso.phishedu.ResendEmailDialogOptionActivity"
            android:label="@string/title_activity_resend_email_dialog_option" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.tudarmstadt.informatik.secuso.phishedu.AlertDialogActivity" />
        </activity>
    </application>

</manifest>
