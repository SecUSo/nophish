    android:layout_marginLeft="14dp"
    android:layout_marginTop="20dp"
    android:text="Nun bist du an der Reihe.\n\n1. Folge dem untigen Link\n\n2. Find die Adressleiste\n\n3.Todo: Aufgabe beweist: die Adressleiiste gefunde und dass ganze URL betrachtet wurde.\n\n4. Kehre vom Browser zurÃ¼ck in die App"
    android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_find_addr_bar_exercise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:onClick="redirectToPage"
        android:text="@string/start_button" />

</RelativeLayout>
