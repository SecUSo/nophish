<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WebAddressFirstInfoActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Aufbau von Web-Adressen"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:src="@drawable/emblem_library" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:text="Der Teil, der dich interessiert, befindet sich zwischen dem Anfang der Web-Adresse"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="ersten Slash"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/TextView01"
        android:text=" und dem aller"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_http_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginRight="59dp"
        android:background="#E6F1F5"
        android:text="http://"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#AB2848"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:background="#E6F1F5"
        android:text=" / "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#AB2848"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_domain_b"
        android:layout_alignLeft="@+id/textView3"
        android:background="#E6F1F5"
        android:text=" / "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#AB2848"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#E6F1F5"
        android:text="http://"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#AB2848"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_domain_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_domain_a"
        android:background="#36F365"
        android:text="web-adressen.liest.teil-wichtigste-der-ist-dies.com"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/text_domain_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignRight="@+id/text_domain_b"
        android:layout_toRightOf="@+id/TextView02"
        android:background="#36F365"
        android:text="lasst.uns.lernen.wie.man."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView04"
        android:layout_alignBottom="@+id/TextView04"
        android:layout_alignRight="@+id/text_domain_b"
        android:background="#FEFC9F"
        android:text="alles-was/danach."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#5F655B" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_domain_b"
        android:layout_toLeftOf="@+id/TextView03"
        android:background="#E6F1F5"
        android:text=" / "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#AB2848"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_domain_b"
        android:layout_below="@+id/TextView04"
        android:background="#FEFC9F"
        android:text="kommt/ist_irrelevant"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#5F655B" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/TextView05"
        android:layout_marginTop="27dp"
        android:text="Allem, was danach kommt, kannst du unter keinen UmstÃ¤nden vertrauen."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="goToNextWebAddressInfoActivity"
        android:text="Weiter" />

</RelativeLayout>