<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameIntroActivity" >

    <TextView
        android:id="@+id/game_intro_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_standard"
        android:gravity="center"
        android:text="@string/awareness_final_text_4_lets_start"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/game_intro_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/game_intro_text_3"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_centerVertical="true"
        android:src="@drawable/dontbelieveus" />

    <TextView
        android:id="@+id/game_intro_text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/game_intro_text_3"
        android:layout_below="@+id/game_intro_image"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/game_intro_text_4"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    
    <ImageView
        android:id="@+id/game_intro_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="goToAwareness03"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/game_intro_arrow_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/forward" />

</RelativeLayout>