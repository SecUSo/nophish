<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".AboutActivity" >

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:src="@drawable/back" />
        
        
       
        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back_icon"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_toRightOf="@+id/back_icon"
            android:text="ZurÃ¼ck Icon"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
         <ImageView
            android:id="@+id/forward_icon"
            android:layout_below="@+id/back_text"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:src="@drawable/forward" />

        <TextView
            android:id="@+id/forward_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/forward_icon"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_toRightOf="@+id/forward_icon"
            android:text="Weiter Icon"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        

    </RelativeLayout>

</ScrollView>