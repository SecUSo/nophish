<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartMenuActivity" >

    <!-- sign-in button -->

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_below="@+id/google_plus_text"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- sign-out button -->

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_show_leaderboard_rate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_standard_height"
        android:minWidth="@dimen/btn_menu_width"
        android:layout_alignLeft="@+id/button_show_online_achievement"
        android:layout_below="@+id/button_show_online_achievement"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/button_show_leaderboard_rate"
        android:visibility="gone"
        android:onClick="showLeaderboardRate" />

    <Button
        android:id="@+id/button_show_leaderboard_total"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_standard_height"
        android:minWidth="@dimen/btn_menu_width"
        android:layout_alignLeft="@+id/button_show_leaderboard_rate"
        android:layout_below="@+id/button_show_leaderboard_rate"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/button_show_leaderboard_total"
        android:visibility="gone"
        android:onClick="showLeaderboardTotal" />

    <Button
        android:id="@+id/button_show_online_achievement"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_standard_height"
        android:layout_below="@+id/sign_in_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_large"
        android:minWidth="@dimen/btn_menu_width"
        android:text="@string/button_show_online_achievement"
        android:visibility="gone"
        android:onClick="showAchievments" />

    <TextView
        android:id="@+id/google_plus_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standard"
        android:text="@string/google_plus_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>