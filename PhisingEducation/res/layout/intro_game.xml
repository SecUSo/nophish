<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IntroGameActivity" >

    <TextView
        android:id="@+id/game_intro_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/game_intro_text_2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/game_intro_img_library_emblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/game_intro_text_2"
        android:layout_below="@+id/game_intro_text_2"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/margin_standard"
        android:src="@drawable/emblem_library" />

    <TextView
        android:id="@+id/game_intro_text_describe_lib_emblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/game_intro_img_library_emblem"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_standard"
        android:text="@string/game_intro_text_describe_lib_emblem"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/game_intro_img_desktop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/game_intro_img_library_emblem"
        android:layout_below="@+id/game_intro_img_library_emblem"
        android:layout_marginTop="@dimen/margin_standard"
        android:src="@drawable/desktop" />

    <TextView
        android:id="@+id/game_intro_text_describe_desktop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/game_intro_text_describe_lib_emblem"
        android:layout_alignTop="@+id/game_intro_img_desktop"
        android:text="@string/game_intro_text_describe_pen"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    

</RelativeLayout>