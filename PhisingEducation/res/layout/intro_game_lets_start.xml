<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameIntroActivity" >

    <Button
        android:id="@+id/intro_game_button_play"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_standard_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_standard"
        android:minWidth="@dimen/btn_standard_width"
        android:text="@string/button_play" />

    <TextView
        android:id="@+id/game_intro_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_alignRight="@+id/game_intro_image"
        android:gravity="center"
        android:text="@string/game_intro_text_3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/game_intro_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/game_intro_text_3"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_centerVertical="true"
        android:src="@drawable/dontbelieveus" />

    <TextView
        android:id="@+id/game_intro_text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/game_intro_text_3"
        android:layout_below="@+id/game_intro_image"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/game_intro_text_4"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>