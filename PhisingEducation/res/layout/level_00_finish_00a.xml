<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_00_finish_00_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_00_finish_00a_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/level_00_finish_00a_text_01"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/level_00_finish_00_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_00_finish_00a_text_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_xxsmall"
            android:contentDescription="@string/content_desc_suprised"
            android:src="@drawable/surprised" />
    </RelativeLayout>

</ScrollView>