<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_00_finish_06_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_00_finish_06_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/level_00_finish_06_text_01"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/level_00_finish_06_image_01"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_alignLeft="@+id/level_00_finish_06_text_01"
            android:layout_below="@+id/level_00_finish_06_text_01"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_standard"
            android:contentDescription="@string/content_desc_symbol_book"
            android:src="@drawable/emblem_library" />

        <TextView
            android:id="@+id/level_00_finish_06_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/level_00_finish_06_image_01"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_standard"
            android:text="@string/level_00_finish_06_text_02"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/level_00_finish_06_image_02"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_alignLeft="@+id/level_00_finish_06_image_01"
            android:layout_below="@+id/level_00_finish_06_image_01"
            android:layout_marginTop="@dimen/margin_standard"
            android:contentDescription="@string/content_desc_symbol_pen"
            android:src="@drawable/desktop" />

        <TextView
            android:id="@+id/level_00_finish_06_text_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_00_finish_06_text_02"
            android:layout_alignTop="@+id/level_00_finish_06_image_02"
            android:text="@string/level_00_finish_06_text_03"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</ScrollView>