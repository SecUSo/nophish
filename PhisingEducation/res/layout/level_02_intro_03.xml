<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_02_intro_03_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_02_intro_03_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/level_02_intro_03_text_01"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_02_intro_01_domain_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/level_02_intro_01_http_01"
            android:layout_alignBottom="@+id/level_02_intro_01_http_01"
            android:layout_toRightOf="@+id/level_02_intro_01_http_01"
            android:background="@color/domain"
            android:text="@string/domain"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_02_intro_01_path_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/level_02_intro_01_domain_01"
            android:layout_alignBottom="@+id/level_02_intro_01_domain_01"
            android:layout_toRightOf="@+id/level_02_intro_01_domain_01"
            android:text="@string/path"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/level_02_intro_01_domain_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_02_intro_01_http_01"
            android:layout_below="@+id/level_02_intro_03_text_01"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:background="@color/domain"
            android:gravity="center"
            android:padding="@dimen/mini_padding"
            android:text="@string/domain_description"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_02_intro_01_http_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_02_intro_03_text_01"
            android:layout_below="@+id/level_02_intro_01_domain_02"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:text="@string/http"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />
    </RelativeLayout>

</ScrollView>