<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/level_2_web_address_text_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/level_2_web_address_domain_text_5"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_2_domain_blocks_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background_textview"
        android:padding="@dimen/margin_xxsmall"
        android:text="@string/level_2_domain_online_banking"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_2_domain_dot_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_2_domain_blocks_5"
        android:layout_alignBaseline="@+id/level_2_domain_blocks_5"
        android:layout_toRightOf="@+id/level_2_domain_blocks_5"
        android:layout_centerHorizontal="true"
        android:text="@string/level_2_dot"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_2_domain_bank_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_2_domain_dot_5"
        android:layout_alignBottom="@+id/level_2_domain_dot_5"
        android:layout_toRightOf="@+id/level_2_domain_dot_5"
        android:text="@string/level_2_domain_bank"
        android:background="@drawable/background_textview"
        android:padding="@dimen/margin_xxsmall"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/level_2_domain_dot_5_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_2_domain_bank_5"
        android:layout_alignBaseline="@+id/level_2_domain_bank_5"
        android:layout_toRightOf="@+id/level_2_domain_bank_5"
        android:layout_centerHorizontal="true"
        android:text="@string/level_2_dot"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
        <TextView
        android:id="@+id/level_2_domain_de_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_2_domain_dot_5_b"
        android:layout_alignBottom="@+id/level_2_domain_dot_5_b"
        android:layout_toRightOf="@+id/level_2_domain_dot_5_b"
        android:text="@string/level_2_domain_de"
        android:background="@drawable/background_highlight"
        android:padding="@dimen/margin_xxsmall"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_2_web_address_text_5_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_2_web_address_text_5"
            android:layout_below="@+id/level_2_web_address_text_5"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/level_2_domain_first_block"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        
        <TextView
        android:id="@+id/level_2_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_2_domain_blocks_5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:text="@string/level_2_country"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

</RelativeLayout>