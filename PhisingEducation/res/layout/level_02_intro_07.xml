<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/level_02_intro_07_text_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/level_02_intro_07_text_01"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/dot_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/domain_01"
        android:layout_alignBottom="@+id/domain_01"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_xxsmall"
        android:layout_toRightOf="@+id/domain_01"
        android:text="@string/dot"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/http"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/domain_02"
        android:layout_alignBottom="@+id/domain_02"
        android:layout_marginLeft="@dimen/margin_xxsmall"
        android:layout_toRightOf="@+id/domain_02"
        android:text="@string/path_dot_dot_dot"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/dot_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/subdomain"
        android:layout_alignBottom="@+id/subdomain"
        android:layout_marginLeft="@dimen/margin_xxsmall"
        android:layout_toRightOf="@+id/subdomain"
        android:text="@string/dot"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/domain_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_xxsmall"
        android:layout_toRightOf="@+id/dot_02"
        android:background="@color/light_red"
        android:padding="@dimen/mini_padding"
        android:text="@string/domain_de"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/subdomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/http"
        android:layout_alignBottom="@+id/http"
        android:layout_marginLeft="@dimen/margin_xxsmall"
        android:layout_toRightOf="@+id/http"
        android:background="@color/red"
        android:padding="@dimen/mini_padding"
        android:text="@string/subdomain"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/domain_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_xxsmall"
        android:layout_toRightOf="@+id/dot_01"
        android:background="@color/light_red"
        android:padding="@dimen/mini_padding"
        android:text="@string/domain_spiegel"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/arrow_domain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dot_02"
        android:layout_toRightOf="@+id/http"
        android:contentDescription="@string/content_desc_arrow_up_abo"
        android:src="@drawable/up" />

</RelativeLayout>