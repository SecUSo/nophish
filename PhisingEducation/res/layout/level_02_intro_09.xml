<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_02_intro_09_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_02_intro_09_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/level_02_intro_09_text_01"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_02_intro_example_amazon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_02_intro_09_text_01"
            android:layout_below="@+id/level_02_intro_09_text_01"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/level_02_example_amazon"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_02_intro_example_googlemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_02_intro_example_amazon"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/level_02_example_googlemail"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
         <TextView
            android:id="@+id/level_02_intro_example_ebay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_02_intro_example_googlemail"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/level_02_example_ebay"
            android:textAppearance="?android:attr/textAppearanceMedium" />
         
           <TextView
            android:id="@+id/level_02_intro_example_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_02_intro_example_ebay"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/level_02_example_facebook"
            android:textAppearance="?android:attr/textAppearanceMedium" />
           
           
           <TextView
            android:id="@+id/linebreaks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_02_intro_example_facebook"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/linebreaks"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</ScrollView>