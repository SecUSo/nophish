<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_03_intro_03_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".IpNonsenseUrlSecondInfoActivity" >

        <TextView
            android:id="@+id/level_03_intro_03_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recognize_attacks"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/level_03_warning"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:layout_alignLeft="@+id/level_03_intro_03_text_01"
            android:layout_below="@+id/level_03_intro_03_text_01"
            android:layout_marginTop="@dimen/margin_standard"
            android:src="@drawable/dialog_warning" />

        <TextView
            android:id="@+id/level_03_new_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/level_03_warning"
            android:layout_toRightOf="@+id/level_03_warning"
            android:text="@string/new_attack"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_03_intro_03_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_03_warning"
            android:layout_below="@+id/level_03_warning"
            android:text="@string/level_03_intro_03_text_02"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_03_intro_03_http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_03_intro_03_text_02"
            android:layout_below="@+id/level_03_intro_03_text_02"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/http"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/level_03_intro_03_subdomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/level_03_intro_03_http"
            android:layout_alignBottom="@+id/level_03_intro_03_http"
            android:layout_toRightOf="@+id/level_03_intro_03_http"
            android:background="@color/light_red"
            android:text="@string/level_03_intro_03_subdomain"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_03_intro_03_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/level_03_intro_03_subdomain"
            android:layout_alignBottom="@+id/level_03_intro_03_subdomain"
            android:layout_toRightOf="@+id/level_03_intro_03_subdomain"
            android:background="@color/red"
            android:text="@string/level_03_intro_03_domain"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_03_intro_03_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/level_03_intro_03_domain"
            android:layout_alignBottom="@+id/level_03_intro_03_domain"
            android:layout_toRightOf="@+id/level_03_intro_03_domain"
            android:text="@string/slash"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/level_03_intro_03_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_03_intro_03_http"
            android:layout_below="@+id/level_03_intro_03_http"
            android:text="@string/level_03_intro_03_path"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/linebreaks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_03_intro_03_path"
            android:layout_below="@+id/level_03_intro_03_path"
            android:text="@string/linebreaks"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</ScrollView>