<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/level_4_text_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/level_4_text_reminder_subdomain"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_2_domain_dot_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_2_domain_blocks_8"
        android:layout_alignBottom="@+id/level_2_domain_blocks_8"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/level_2_domain_blocks_8"
        android:text="@string/level_2_dot"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/level_2_domain_dot_8_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_2_domain_bank_8"
        android:layout_alignBottom="@+id/level_2_domain_bank_8"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/level_2_domain_bank_8"
        android:text="@string/level_2_dot"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/level_2_company_components"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_2_domain_blocks_8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:gravity="center"
        android:text="@string/level_2_company_components"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/level_4_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level_4_http"
        android:layout_centerVertical="true"
        android:text="@string/level_4_http"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/level_2_domain_blocks_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_4_http"
        android:layout_alignBottom="@+id/level_4_http"
        android:layout_toRightOf="@+id/level_4_http"
        android:background="@drawable/background_highlight"
        android:padding="@dimen/margin_xxsmall"
        android:text="@string/level_2_domain_online_banking"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_2_domain_bank_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_2_domain_blocks_8"
        android:layout_alignBottom="@+id/level_2_domain_blocks_8"
        android:layout_toRightOf="@+id/level_2_domain_dot_8"
        android:background="@drawable/background_textview"
        android:padding="@dimen/margin_xxsmall"
        android:text="@string/level_2_domain_bank"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_2_domain_de_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_2_domain_bank_8"
        android:layout_alignBottom="@+id/level_2_domain_bank_8"
        android:layout_toRightOf="@+id/level_2_domain_dot_8_b"
        android:background="@drawable/background_textview"
        android:padding="@dimen/margin_xxsmall"
        android:text="@string/level_2_domain_de"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_4_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level_4_http"
        android:layout_below="@+id/level_4_http"
        android:text="@string/level_2_example_path"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grey" />

</RelativeLayout>