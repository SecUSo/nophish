<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_04_intro_01_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <ImageView
            android:id="@+id/level_04_intro_01_image_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_04_intro_01_text_01"
            android:layout_marginTop="@dimen/margin_standard"
            android:contentDescription="@string/content_desc_house"
            android:src="@drawable/gohome" />

        <TextView
            android:id="@+id/level_04_intro_01_img_description_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/level_04_intro_01_img_description_computer"
            android:layout_alignBottom="@+id/level_04_intro_01_img_description_computer"
            android:text="@string/level_04_intro_01_img_descr_house"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_04_intro_01_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/level_04_intro_01_text_01"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_04_intro_01_example_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_04_intro_01_text_02"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/level_04_intro_01_example_ip"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_04_intro_01_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_04_intro_01_img_description_house"
            android:layout_below="@+id/level_04_intro_01_img_description_house"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/level_04_intro_01_text_02"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_04_intro_01_img_description_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_04_intro_01_image_computer"
            android:layout_below="@+id/level_04_intro_01_image_computer"
            android:text="@string/level_04_intro_01_img_descr_computer"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/linebreaks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_04_intro_01_example_ip"
            android:text="@string/linebreaks" />

        <ImageView
            android:id="@+id/level_04_intro_01_image_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/level_04_intro_01_image_house"
            android:layout_toRightOf="@+id/level_04_intro_01_image_house"
            android:contentDescription="@string/content_desc_computer"
            android:src="@drawable/mycomputer" />

    </RelativeLayout>

</ScrollView>