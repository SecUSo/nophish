<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_04_intro_03_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_04_intro_03_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/recognize_attacks"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/level_04_warning"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:layout_alignLeft="@+id/level_04_intro_03_text_01"
            android:layout_below="@+id/level_04_intro_03_text_01"
            android:layout_marginTop="@dimen/margin_standard"
            android:contentDescription="@string/content_desc_attention"
            android:src="@drawable/dialog_warning" />

        <TextView
            android:id="@+id/level_04_new_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/level_04_warning"
            android:layout_toRightOf="@+id/level_04_warning"
            android:text="@string/new_attack"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_04_intro_03_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_04_warning"
            android:layout_below="@+id/level_04_warning"
            android:text="@string/level_04_intro_03_text_02"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_04_intro_03_http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_04_intro_03_text_02"
            android:layout_below="@+id/level_04_intro_03_text_02"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/http"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/linebreaks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_04_intro_03_http"
            android:layout_below="@+id/level_04_intro_03_http"
            android:text="@string/linebreaks"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_04_intro_03_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/level_04_intro_03_http"
            android:layout_alignBottom="@+id/level_04_intro_03_http"
            android:layout_toRightOf="@+id/level_04_intro_03_http"
            android:background="@color/red"
            android:text="@string/level_04_intro_03_example_ip"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_04_intro_03_ip_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/level_04_intro_03_ip"
            android:layout_alignBottom="@+id/level_04_intro_03_ip"
            android:layout_toRightOf="@+id/level_04_intro_03_ip"
            android:text="@string/level_04_intro_03_example_ip_path"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />
    </RelativeLayout>

</ScrollView>