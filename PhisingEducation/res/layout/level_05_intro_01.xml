<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reminder_examples"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_09_intro_01_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/reminder"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/dot_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/domain_01"
            android:layout_alignBottom="@+id/domain_01"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_xxsmall"
            android:layout_toRightOf="@+id/domain_01"
            android:text="@string/dot"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_02_intro_08_subdomain_description"
            android:layout_below="@+id/level_02_intro_08_domain_description"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/http"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/domain_02"
            android:layout_alignBottom="@+id/domain_02"
            android:layout_marginLeft="@dimen/margin_xxsmall"
            android:layout_toRightOf="@+id/domain_02"
            android:text="@string/path_dot_dot_dot"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/dot_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/subdomain"
            android:layout_alignBottom="@+id/subdomain"
            android:layout_marginLeft="@dimen/margin_xxsmall"
            android:layout_toRightOf="@+id/subdomain"
            android:text="@string/dot"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subdomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/http"
            android:layout_alignBottom="@+id/http"
            android:layout_marginLeft="@dimen/margin_xxsmall"
            android:layout_toRightOf="@+id/http"
            android:background="@color/subdomain"
            android:text="@string/subdomain"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/domain_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dot_02"
            android:layout_alignBottom="@+id/dot_02"
            android:layout_marginLeft="@dimen/margin_xxsmall"
            android:layout_toRightOf="@+id/dot_02"
            android:background="@color/domain"
            android:text="@string/domain_de"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/domain_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dot_01"
            android:layout_alignBottom="@+id/dot_01"
            android:layout_marginLeft="@dimen/margin_xxsmall"
            android:layout_toRightOf="@+id/dot_01"
            android:background="@color/domain"
            android:text="@string/domain_spiegel"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_02_intro_08_domain_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_09_intro_01_reminder"
            android:layout_marginTop="@dimen/margin_standard"
            android:background="@color/domain"
            android:gravity="center"
            android:padding="@dimen/mini_padding"
            android:text="@string/level_02_intro_08_domain_description"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_02_intro_08_subdomain_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/http"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/subdomain"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:text="@string/level_02_intro_08_subdomain_description"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/warning"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:layout_below="@+id/level_02_intro_08_subdomain_description"
            android:layout_marginTop="@dimen/margin_large"
            android:contentDescription="@string/content_desc_attention"
            android:padding="@dimen/mini_padding"
            android:src="@drawable/dialog_warning" />

        <TextView
            android:id="@+id/former_attacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/warning"
            android:layout_toRightOf="@+id/warning"
            android:text="@string/former_attacks"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/reminder_subdomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/warning"
            android:layout_below="@+id/warning"
            android:text="@string/reminder_ip"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/example_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reminder_subdomain"
            android:layout_below="@+id/reminder_subdomain"
            android:layout_marginTop="@dimen/margin_xxsmall"
            android:text="@string/url"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/reminder_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/example_01"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/reminder_no_brand"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/example_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reminder_ip"
            android:layout_below="@+id/reminder_ip"
            android:layout_marginTop="@dimen/margin_xxsmall"
            android:text="@string/url"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/reminder_nonsense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/example_02"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/reminder_subdomain"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/example_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reminder_nonsense"
            android:layout_below="@+id/reminder_nonsense"
            android:layout_marginTop="@dimen/margin_xxsmall"
            android:text="@string/url"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</ScrollView>