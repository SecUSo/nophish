            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reminder_example_ip_01"
            android:layout_alignBottom="@+id/reminder_example_ip_01"
            android:layout_toRightOf="@+id/reminder_example_ip_01"
            android:background="@color/red"
            android:text="@string/level_04_intro_03_example_ip"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/reminder_example_ip_03"
