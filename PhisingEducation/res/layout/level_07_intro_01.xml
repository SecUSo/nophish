            android:layout_alignBaseline="@+id/reminder_example_subdomain_01"
            android:layout_alignBottom="@+id/reminder_example_subdomain_01"
            android:layout_toRightOf="@+id/reminder_example_subdomain_01"
            android:background="@color/light_red"
            android:text="@string/level_03_intro_03_subdomain"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/reminder_example_subdomain_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reminder_example_subdomain_02"
            android:layout_alignBottom="@+id/reminder_example_subdomain_02"
            android:layout_toRightOf="@+id/reminder_example_subdomain_02"
            android:background="@color/red"
            android:text="@string/level_03_intro_03_domain"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/reminder_example_subdomain_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reminder_example_subdomain_03"
            android:layout_alignBottom="@+id/reminder_example_subdomain_03"
            android:layout_toRightOf="@+id/reminder_example_subdomain_03"
            android:text="@string/slash"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/reminder_example_subdomain_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_example_subdomain_01"
            android:text="@string/level_03_intro_03_path"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/reminder_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_example_subdomain_05"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/reminder_ip"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/reminder_example_ip_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reminder_ip"
            android:layout_below="@+id/reminder_ip"
