<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recognize_attack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_07_intro_04_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/recognize_attacks"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_07_intro_04_text_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_07_intro_04_text_01"
            android:layout_below="@+id/level_07_intro_04_text_01"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/level_07_intro_04_text_03"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/level_07_warning"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:layout_alignLeft="@+id/level_07_intro_04_text_04"
            android:layout_below="@+id/level_07_intro_04_text_04"
            android:layout_marginTop="@dimen/margin_standard"
            android:contentDescription="@string/content_desc_attention"
            android:padding="@dimen/mini_padding"
            android:src="@drawable/dialog_warning" />

        <TextView
            android:id="@+id/level_07_new_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/level_07_warning"
            android:layout_toRightOf="@+id/level_07_warning"
            android:text="@string/new_attack"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_07_intro_04_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_07_warning"
            android:layout_below="@+id/level_07_warning"
            android:text="@string/level_07_intro_04_text_02"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/example_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_07_intro_04_text_02"
            android:layout_below="@+id/level_07_intro_04_text_02"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/url"
            android:textAppearance="?android:attr/textAppearanceMedium"
             />

        <TextView
            android:id="@+id/level_07_intro_04_text_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_07_intro_04_text_03"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/level_07_intro_04_text_04"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</ScrollView>