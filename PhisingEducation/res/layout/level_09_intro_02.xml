<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_02_intro_03_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_09_intro_02_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/level_09_intro_02_text_01"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_09_intro_02_before_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_09_intro_02_text_01"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/level_09_intro_02_before_path"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/level_09_intro_02_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/level_09_intro_02_before_path"
            android:layout_alignBottom="@+id/level_09_intro_02_before_path"
            android:layout_toRightOf="@+id/level_09_intro_02_before_path"
            android:background="@color/blue"
            android:text="@string/level_09_intro_02_path"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_09_intro_02_path_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/level_09_intro_02_path"
            android:layout_below="@+id/level_09_intro_02_path"
            android:background="@color/blue"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_xxsmall"
            android:text="@string/path_description"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</ScrollView>