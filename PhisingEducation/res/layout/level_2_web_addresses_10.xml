<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/level_2_web_address_text_example_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/level_2_web_address_text_example_1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_2_web_address_text_example_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level_2_web_address_text_example_1"
        android:layout_below="@+id/level_2_web_address_text_example_1"
        android:layout_marginTop="@dimen/margin_standard"
        android:text="@string/level_2_web_address_text_example_2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/level_2_web_address_img_checkmark_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level_2_web_address_text_example_2"
        android:layout_below="@+id/level_2_web_address_text_example_2"
        android:layout_marginTop="@dimen/margin_large"
        android:src="@drawable/checkmark" />

    <TextView
        android:id="@+id/level_2_web_address_text_example_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_2_web_address_img_checkmark_1"
        android:layout_toRightOf="@+id/level_2_web_address_img_checkmark_1"
        android:text="@string/level_2_meaning_checkmark"
        android:paddingLeft="@dimen/margin_small"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/level_2_web_address_img_cross_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_2_web_address_img_checkmark_1"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_toLeftOf="@+id/level_2_web_address_text_example_3"
        android:src="@drawable/cross" />

    <TextView
        android:id="@+id/level_2_web_address_text_example_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_2_web_address_img_cross_1"
        android:layout_alignLeft="@+id/level_2_web_address_text_example_3"
        android:text="@string/level_2_meaning_cross"
        android:paddingLeft="@dimen/margin_small"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>