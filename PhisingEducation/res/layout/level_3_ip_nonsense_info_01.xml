<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IpNonsenseUrlInfoActivity" >

    <ImageView
        android:id="@+id/level_3_img_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_3_ip_text_top"
        android:layout_marginTop="@dimen/margin_standard"
        android:src="@drawable/gohome" />

    <TextView
        android:id="@+id/level_3_img_description_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_3_img_description_ip"
        android:layout_alignBottom="@+id/level_3_img_description_ip"
        android:text="@string/level_3_img_descr_home"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_3_ip_text_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standard"
        android:text="@string/level_3_text_ip_and_home_address"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/level_3_img_computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_3_img_left"
        android:layout_alignRight="@+id/level_3_ip_text_top"
        android:layout_marginRight="@dimen/margin_standard"
        android:src="@drawable/mycomputer_small" />

    <TextView
        android:id="@+id/level_3_img_description_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/level_3_img_computer"
        android:layout_below="@+id/level_3_img_computer"
        android:text="@string/level_3_img_descr_computer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_3_example_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_3_text_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/level_3_example_ip"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level_3_text_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level_3_img_description_home"
        android:layout_below="@+id/level_3_img_description_home"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/level_3_text_ip_definition"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>