<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/proof_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_text"
    android:layout_marginRight="@dimen/margin_text"
    android:layout_marginTop="@dimen/margin_text" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ProofActivity" >

        <include
            android:id="@+id/score_relative"
            layout="@layout/score_fragment" />

        <TextView
            android:id="@+id/phish_proof_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score_relative"
            android:text="@string/phish_proof_01"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/feedback_smiley"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/phish_proof_text"
            android:layout_below="@+id/phish_proof_text"
            android:src="@drawable/small_smiley_smile"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedback_smiley"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/url"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
            android:id="@+id/phish_proof_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/url"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/phish_proof_02"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/done_botton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phish_proof_text_02"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_standard"
            android:onClick="onDoneClick"
            android:text="@string/button_verify" />

    </RelativeLayout>

</ScrollView>