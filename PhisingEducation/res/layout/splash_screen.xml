<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartMenuActivity" >

    <!--
        <ImageView
        android:id="@+id/image_view_identify_phishing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/identify_phishing" />
    -->

    <ImageView
        android:id="@+id/splash_image_identify_phishing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/identify_phishing" />

    <TextView
        android:id="@+id/splash_text_beat_phishing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title_anti_phishing"
        android:layout_below="@+id/splash_image_identify_phishing"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="center"
        android:text="@string/text_beat_phishing"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/title_anti_phishing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_image_identify_phishing"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:gravity="center"
        android:text="@string/title_anti_phishing"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/font_size_large" />

</RelativeLayout>