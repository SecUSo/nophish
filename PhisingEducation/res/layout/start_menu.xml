<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartMenuActivity" >

    <Button
        android:id="@+id/menu_button_level_overview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_standard_height"
        android:minWidth="@dimen/btn_standard_width"
        android:layout_below="@+id/menu_button_play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_small"
        android:onClick="showLevelOverview"
        android:text="@string/button_level_overview" />

    <Button
        android:id="@+id/menu_button_show_lectures"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_standard_height"
        android:layout_alignLeft="@+id/menu_button_level_overview"
        android:layout_below="@+id/menu_button_level_overview"
        android:layout_marginTop="@dimen/margin_small"
        android:minWidth="@dimen/btn_standard_width"
        android:text="@string/button_show_lectures" />

    <Button
        android:id="@+id/menu_button_play"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_standard_height"
        android:layout_alignLeft="@+id/menu_button_level_overview"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:minWidth="@dimen/btn_standard_width"
        android:onClick="startGame"
        android:text="@string/button_play" />

    <Button
        android:id="@+id/menu_button_more_info"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_standard_height"
        android:layout_alignLeft="@+id/menu_button_social"
        android:layout_below="@+id/menu_button_social"
        android:layout_marginTop="@dimen/margin_large"
        android:minWidth="@dimen/btn_standard_width"
        android:onClick="showMoreInfo"
        android:text="@string/button_more_info" />

    <Button
        android:id="@+id/menu_button_social"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_standard_height"
        android:minWidth="@dimen/btn_standard_width"
        android:layout_below="@+id/menu_button_show_lectures"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_small"
        android:onClick="goToGooglePlay"
        android:text="@string/button_social" />

</RelativeLayout>