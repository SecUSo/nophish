<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".YouAreCorrectActivity" >

    <TextView
        android:id="@+id/your_are_correct_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/you_are_correct"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/your_are_correct_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/url"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/your_are_correct_image"
        android:layout_width="@dimen/security_icons"
        android:layout_height="@dimen/security_icons"
        android:layout_below="@+id/your_are_correct_02"
        android:layout_centerHorizontal="true"
        android:src="@drawable/security_high" />

</RelativeLayout>