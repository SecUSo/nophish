<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DisplayYouDontBelieveUsActivity" >

    <TextView
        android:id="@+id/awareness_text_you_dont_believe_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_standard"
        android:gravity="center"
        android:text="@string/awareness_text_you_dont_believe_us"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/awareness_button_see_for_yourself"
        android:minWidth="@dimen/btn_standard_width"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_standard_height"
        android:layout_centerHorizontal="true"
        android:text="@string/awareness_text_see_for_yourself" />

    <ImageView
        android:id="@+id/awareness_image_u_dont_believe_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/awareness_text_you_dont_believe_us"
        android:layout_centerVertical="true"
        android:src="@drawable/dontbelieveus" />

</RelativeLayout>
