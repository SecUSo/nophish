<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_00_finish_03_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_00_finish_03_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/min_text_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/level_00_finish_03_text_01"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/level_00_finish_03_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/website_screenshot_height_large"
            android:layout_below="@+id/level_00_finish_03_text_01"
            android:contentDescription="@string/content_desc_facebook_screenshot_original"
            android:src="@drawable/original" />
    </RelativeLayout>

</ScrollView>