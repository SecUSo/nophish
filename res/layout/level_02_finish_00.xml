<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/level_02_finish_00_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
    
    <RelativeLayout
        android:id="@+id/score_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/level_02_up_finish_00_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/level_finished"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/level_01_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_02_up_finish_00_text_01"
            android:layout_below="@+id/level_02_up_finish_00_text_01"
            android:layout_marginTop="@dimen/margin_standard"
            android:contentDescription="@string/content_desc_medal"
            android:src="@drawable/medal" />

        <TextView
            android:id="@+id/total_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/level_01_award"
            android:layout_toRightOf="@+id/level_01_award"
            android:text="@string/total_score"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/total_score_text"
            android:layout_below="@+id/total_score_text"
            android:text="@string/number"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/level_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/total_score_text"
            android:layout_below="@+id/total_score"
            android:text="@string/level_score"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/level_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/total_score_text"
            android:layout_below="@+id/level_score_text"
            android:text="@string/number"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/level_max_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/total_score_text"
            android:layout_below="@+id/level_score"
            android:text="@string/level_max_score"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/level_max_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/total_score_text"
            android:layout_below="@+id/level_max_score_text"
            android:text="@string/number"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <ImageView
            android:id="@+id/star1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/content_desc_star"
            android:layout_below="@+id/level_max_score"
            android:src="@drawable/star_gold" />
        
        <ImageView
            android:id="@+id/star2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/star1"
            android:contentDescription="@string/content_desc_star"
            android:src="@drawable/star_gold" />
        
        <ImageView
            android:id="@+id/star3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/star2"
            android:contentDescription="@string/content_desc_star"
            android:src="@drawable/star_gold" />
        
    </RelativeLayout>
    <TextView
            android:id="@+id/level_outro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/score_layout"
            android:text="@string/number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone"
             />
    </RelativeLayout>
    

</ScrollView>